<h1 id="stories">Stories</h1>

<div class="stories-row">
    {{#each stories}}
        <div class="stories-col">
            <div class="card">
                <div class="card-image">
                   {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h3>{{stripTags (truncate title 25)}}</h3>
                    <p>{{stripTags (truncate body 100)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn-card grey">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No stories are available at this time.</p>
    {{/each}}
</div>