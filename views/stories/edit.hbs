<style>.addStory{display: none;}</style>

<h2 id="editStory">Edit Story</h2>
<div class="edit-row">
    <form action="/stories/{{story._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row-edit">
            <div class="input-field">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="{{story.title}}">
                
            </div>
        </div>
        <div class="row-edit">
            <div class="input-field">
                <label for="status">Status</label>
                <select name="status" id="status">

                    {{#select story.status}}
                        <option value="public" selected> public</option>
                        <option value="private">Private</option>
                        <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                
            </div>
        </div>
        <div class="row-edit">
            <div class="input-field">
                <h5>Tell us your Story:</h5>
                <textarea name="body" id="body" cols="30" rows="10">{{story.body}}</textarea>
            </div>
        </div>
        <div class="row-edit">
            <input type="submit" value="Save" class="btn">
            <a href="/stories" class="btn orange">Cancel</a>
        </div>
    </form>
</div>